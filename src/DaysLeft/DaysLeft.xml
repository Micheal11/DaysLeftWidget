<?xml version="1.0" encoding="utf-8" ?>
<widget id="DaysLeft.widget.DaysLeft" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>DaysLeft</name>
    <description>Days left widget returns number of days remaining to reach a given date.</description>
    <properties>
        <property key="Deadline" type="entity" required="true">
            <caption>Entity</caption>
            <category>Data Source</category>
            <description>This is an entity</description>
        </property>
        <property key="eventName" type="attribute" entityProperty="Deadline" required="true" >
            <caption>Event input</caption>
            <category>Data Source</category>
            <description>This is the event to occur on the selected date</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="dateInserted" type="attribute" entityProperty="Deadline" required="true" >
            <caption>Date Attribute</caption>
            <category>Data Source</category>
            <description>This is the Date of the event</description>
            <attributeTypes>
                <attributeType name="DateTime" />
            </attributeTypes>
        </property>
        <property key="width" type="integer" defaultValue="350"  required="true">
            <caption>Width</caption>
            <category>Appearance</category>
            <description>This is the width of the widget</description>
        </property>
        <property key="height" type="integer" defaultValue="300" required="true">
            <caption>Height</caption>
            <category>Appearance</category>
            <description>This is the height of the widget</description>
        </property>
        <property key="microflowToExecute" type="microflow" required="false">
            <caption>Microflow</caption>
            <category>Behavior</category>
            <description>The microflow to execute on click.</description>
            <returnType type="Boolean" />
        </property>
        <property key="backgroundColor" type="enumeration" defaultValue="x69baf4">
            <caption>Background Color</caption>
            <category>Appearance</category>
            <description>Select your favorite background color</description>
            <enumerationValues>
                <enumerationValue key="x69baf4">Light Blue</enumerationValue>
                <enumerationValue key="x008b8b">Dark Cyan</enumerationValue>
                <enumerationValue key="xc0c0c0">Silver</enumerationValue>
                <enumerationValue key="xBE3EC3">Purple</enumerationValue>
                <enumerationValue key="otherColor">Other Color</enumerationValue>
            </enumerationValues>
        </property>
        <property key="differentColor" type="string" required="false">
            <caption>Different Color</caption>
            <category>Appearance</category>
            <description>Try a different color, use lower case or a color code</description>
        </property> 
    </properties>
</widget>
